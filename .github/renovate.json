{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "weekly"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Minor",
      "automergeType": "branch-push",
      "prCreation": "not-pending",
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "Major",
      "prCreation": "immediate",
      "automerge": false,
      "stabilityDays": 3
    }
  ]
}
