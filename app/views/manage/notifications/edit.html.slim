= render partial: 'manage/bookings/navigation', locals: { active: :notifications, booking: @notification.booking }

.row.justify-content-center
  .col-md-8
    .card
      .card-body
        = form_with(model: [:manage, @booking, @notification], local: true) do |f|

          fieldset
            = f.text_field :subject
            = f.datetime_local_field :sent_at, step: 1
            = f.text_area :body

          .form-actions.pt-4.mt-3.border-top
            => f.submit
            - if @notification.deliverable?
              = f.button name: :'deliver', value: true, class: 'btn btn-outline-primary'
                = t('.deliver')
