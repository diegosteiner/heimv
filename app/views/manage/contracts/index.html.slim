    tr
      th= Contract.human_attribute_name(:booking)
      th= Contract.human_attribute_name(:sent_at)
      th= Contract.human_attribute_name(:signed_at)
      th= Contract.human_attribute_name(:title)
      th= Contract.human_attribute_name(:text)
      th
