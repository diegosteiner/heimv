= render partial: 'manage/homes/navigation', locals: { active: :meter_reading_periods }

table.table.table-hover.align-middle
  thead
    tr
      th= Tarif.model_name.human
      th= MeterReadingPeriod.human_attribute_name(:ends_at)
      th= MeterReadingPeriod.human_attribute_name(:end_value)

  tbody
    - @meter_reading_period_groups.each do |tarif, meter_reading_period_group|
      - meter_reading_period = meter_reading_period_group.last
      tr
        td
          = meter_reading_period.tarif.label
        td
          = l(meter_reading_period.ends_at, format: :short)
        td
          = meter_reading_period.end_value

