{
  "extends": [
    "eslint:recommended",
    "prettier/react",
    "prettier",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "prettier",
    "react",
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": "warn",
    "react/jsx-uses-vars": "error",
    "react/prop-types": "off",
    "max-len": [
      "error",
      120
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
